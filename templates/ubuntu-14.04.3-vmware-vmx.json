{
  "variables": {
    "vmx_path": "./output-vmware-iso/packer-vmware-iso.vmx"
  },
  "builders": [{
    "type": "vmware-vmx",
    "source_path": "{{user `vmx_path`}}",
    "ssh_port": 22,
    "ssh_username": "test",
    "ssh_password": "test",
    "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'test'|sudo -S sh '/tmp/shutdown.sh'",
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  }],
	"provisioners": [{
		"type": "shell",
    "inline": [
      "echo 'test'|sudo -S sh '{{.Path}}'"
    ]
	}]
}
